@model TrabajoGrupal.Models.Cuentas
@{
    ViewData["Title"] = "Cuentas";
    
}
<h1>@ViewData["Title"]</h1>
<h6>"Por favor complete los datos...."</h6>
<br>
<!--
<img src="/images/gta-logo.jpg" height="300px" width="300px"><br/> -->
<form asp-action="Create">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
    <label asp-for="Problema" class="control-label"></label><br/>
    <input asp-for="Problema" class="form-control"/><br/>
    
  </div>
  
  <div class="form-group">
    <label asp-for="Descripcion" class="control-label"></label><br/>
    <input asp-for="Descripcion" class="form-control"/><br/>
    
  </div>
  <div class="form-group">
    <label asp-for="Año1" class="control-label"></label><br/>
    <input asp-for="Año1" class="form-control"/><br/>
    
  </div>

  <div class="form-group">
    <label asp-for="Año2" class="control-label"></label><br/>
    <input asp-for="Año2" class="form-control"/><br/>
  </div>

  <div class="form-group">
    <label asp-for="Año3" class="control-label"></label><br/>
    <input asp-for="Año3" class="form-control"/><br/>
  </div>
  
  <div class="form-group">
    <label name="tipocuenta">Tipo de Cuenta:</label><br/>
    <select asp-for="tipocuenta" class="form-control form-control-sm">
      <option value="Activos Corrientes">Activos Corrientes</option>
        <option value="Activos No Corrientes">Activos No Corrientes</option>
        <option value="Pasivos Corrientes">Pasivos Corrientes</option>
        <option value="Pasivos No Corrientes">Pasivos No Corrientes</option>
        <option value="Patrimonio">Patrimonio</option>
    </select>
  </div>
   <br/>

  <input type="submit" value="Enviar" class="btn btn-primary" />
</form>
<h1> 
   <!--@Html.DisplayNameFor(model => model.Mensaje)-->
    @Html.DisplayFor(model => model.Mensaje)
</h1>